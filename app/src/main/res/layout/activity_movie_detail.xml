<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.dylanrodbar.toppeliculas.MovieDetail">

    <RelativeLayout
        android:layout_width="344dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgMovie"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            app:srcCompat="@android:color/holo_blue_bright" />

        <TextView
            android:id="@+id/titleT"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgMovie"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:text="TextView"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/titleT"
            android:layout_below="@+id/titleT"
            android:layout_marginTop="24dp"
            android:text="TextView"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/metascore"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/rating"
            android:layout_below="@+id/rating"
            android:layout_marginTop="24dp"
            android:text="TextView"
            android:textAlignment="center" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
