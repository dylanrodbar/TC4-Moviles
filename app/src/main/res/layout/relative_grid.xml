<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="395dp"
        android:layout_height="fill_parent"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtNameG"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/movieImageG"
            android:layout_marginEnd="36dp"
            android:layout_toStartOf="@+id/movieImageG"
            android:text="Prueba"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/txtStarsG"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtNameG"
            android:layout_below="@+id/txtNameG"
            android:layout_marginTop="9dp"
            android:text="Prueba"
            android:textAlignment="center" />

        <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/movieImageG"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_marginEnd="51dp"
            android:layout_marginTop="73dp"
            android:src="@drawable/ic"></ImageView>

        <TextView
            android:id="@+id/txtMetascoreG"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtStarsG"
            android:layout_below="@+id/movieImageG"
            android:text="Prueba"
            android:textAlignment="center" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>